{
  "typeCheckingMode": "standard",
  "include": ["src", "app.py", "tests"],
  "strict": ["src/**", "app.py"],
  "exclude": ["**/__pycache__", "**/node_modules", "**/.git", "**/.venv", ".venv", ".tox", "build", "dist"],
  "stubPath": "typings",
  "ignore": ["typings/**"],
  "pythonVersion": "3.12",
  "reportMissingTypeStubs": "none",
  "reportWildcardImportFromLibrary": "warning"
}
